<Window x:Class="PipeMongoShell.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="800" Width="600">
    <Grid>
        <TextBox x:Name="txtInput" Height="182" Margin="10,44,10,0" VerticalAlignment="Top" UndoLimit="0" AcceptsReturn="True" AcceptsTab="True" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" ScrollViewer.CanContentScroll="True"/>
        <Button x:Name="btnGo" Content="Go" Margin="439,231,10,0" VerticalAlignment="Top" Height="46" Click="btnGo_Click"/>
        <TextBox x:Name="txtOutput" Margin="10,282,10,10" UndoLimit="0" AcceptsReturn="True" AcceptsTab="True" IsReadOnly="True" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" ScrollViewer.CanContentScroll="True"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,19,0,0" TextWrapping="Wrap" Text="Database:" VerticalAlignment="Top" Width="60"/>
        <TextBox x:Name="txtDatabase" Height="23" Margin="75,16,10,0" TextWrapping="Wrap" VerticalAlignment="Top"/>

    </Grid>
</Window>

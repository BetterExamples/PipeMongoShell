<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
    </startup>
  
  <appSettings>
    <!-- if mongo.exe isn't found in PATH then use the full path to mongo.exe (you can use environment variables in the path) -->
    <!--<add key="MongoShell" value="mongo.exe" />-->
    <add key="MongoShell" value=".\lib\mongo.exe" />
    <add key="MongoShellArguments" value="" />
    <add key="MongoLeadingLinesToSkip" value="3" /> <!-- 2 intro lines + "use ...;" line-->
    <add key="MongoTrailingLinesToSkip" value="2" /> <!-- "bye" + blank line -->
  </appSettings>
</configuration>